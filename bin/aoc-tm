#!/usr/bin/env bash
set -euo pipefail

if command -v aoc-taskmaster >/dev/null 2>&1; then
  exec aoc-taskmaster "$@"
fi

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"
if [[ -x "$script_dir/aoc-taskmaster" ]]; then
  exec "$script_dir/aoc-taskmaster" "$@"
fi

echo "aoc-tm: 'aoc-taskmaster' not found. Install via ./install.sh" >&2
exit 1
